@model IDataResult<List<Posts>>
<link href="~/Views/Posts/css/post.css" rel="stylesheet" />
@{
    List<string> Months = new List<string>
    {
        "Ocak",
        "Şubat",
        "Mart",
        "Nisan",
        "Mayıs",
        "Haziran",
        "Temmuz",
        "Ağustos",
        "Eylül",
        "Ekim",
        "Kasım",
        "Aralık"
    };

    int sayac = 0;
    List<string> Tests = new List<string>();
}

<div class="event-schedule-area-two bg-color pad100">
    <div class="container mt-5">

        <div class="row">

            <div class="col-lg-12">

                <ul class="nav custom-tab mt-5" id="myTab" role="tablist">

                    @foreach (var item in Model.Data.Select(x => x.Post_CreatedDate).Distinct())
                    {
                        sayac++;
                        <li class="nav-item">

                            <a class="nav-link @(sayac == 5 ? "active":"") show days text-center" data-toggle="tab" href="#@item.ToShortDateString()" role="tab" data="item" aria-controls="@item.ToShortDateString()">
                                <span>@item.Day <br> @Months[item.Month - 1]</span>
                            </a>

                        </li>
                        Tests.Add(item.ToShortDateString());

                        if (sayac == 5)
                            break;
                    }

                </ul>

                <div class="tab-content" id="myTabContent">

                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="tab-pane fade active" id="@Tests[i-1].ToString()" role="tabpanel">

                            <div class="table-responsive">

                                <table class="table">

                                    <thead>

                                        <tr>
                                            <th class="text-center" scope="col">Tarih</th>
                                            <th scope="col">Şehir</th>
                                            <th scope="col">Plaka</th>
                                            <th scope="col">Puan</th>
                                            <th scope="col">Açıklama</th>
                                            <th scope="col"></th>
                                        </tr>

                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model.Data/*.Where(x=>x.Post_CreatedDate.ToShortDateString() == DateTime.Now.ToShortDateString())*/)
                                        {
                                            <tr class="inner-box">
                                                <th scope="row">
                                                    <div class="event-date">
                                                        <span>@item.Post_CreatedDate.Date.Day</span>
                                                        <p>@Months[item.Post_CreatedDate.Month-1]</p>
                                                    </div>
                                                </th>
                                                <td>
                                                    <div class="event-wrap">
                                                        <span>@item.City.City_Name</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="event-wrap">
                                                        <span>@item.Post_Plate</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="r-no">
                                                        <span>Room B3</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="r-no">
                                                        <span>@item.Post_Description</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="primary-btn">
                                                        <a class="btn btn-primary" href="#">Read More</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                </div>

            </div>

        </div>

    </div>

</div>