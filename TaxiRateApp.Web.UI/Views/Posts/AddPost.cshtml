@using TaxiRateApp.Web.UI.ViewModels
@model AddPostViewModel

<link rel="stylesheet" href="~/Views/Posts/css/add-posts.css" />

<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<div class="card mx-5 rounded-card" style="margin-top:200px">

    <div class="card-body p-5">

        <form>

            <div class="form-group row">

                <label for="staticEmail" class="col-sm-2 col-form-label">Şehir</label>

                <div class="col-sm-10">

                    <select class="form-select">

                        @foreach (var city in Model.City)
                        {
                            <option value="@city.City_Id">@city.City_Name</option>
                        }

                    </select>
                </div>

            </div>

            <div class="form-group row">

                <label for="Post_Plate" class="col-sm-2 col-form-label">Plaka</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="Post_Plate" placeholder="34XXX123">

                </div>

            </div>

            <div class="form-group row">

                <label for="Post_Title" class="col-sm-2 col-form-label">Başlık</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="Post_Title" placeholder="Başlık">

                </div>

            </div>

            <div class="form-group row">

                <label for="Post_Description" class="col-sm-2 col-form-label">Açıklama</label>

                <div class="col-sm-10">

                    <textarea class="form-control rounded-5" id="exampleFormControlTextarea2" rows="3"></textarea>

                </div>

            </div>

            <div class="form-group row">

                <label for="Post_Description" class="col-sm-2 col-form-label">Puan</label>

                <div class="col-sm-9">

                    <div id="wrapper">

                        <input class="input-star" type="radio" id="star1" name="star" checked="checked" />
                        <label class="label-star" for="star1"></label>

                        <input class="input-star" type="radio" id="star2" name="star" />
                        <label class="label-star" for="star2"></label>

                        <input class="input-star" type="radio" id="star3" name="star" />
                        <label class="label-star" for="star3"></label>

                        <input class="input-star" type="radio" id="star4" name="star" />
                        <label class="label-star" for="star4"></label>

                        <input class="input-star" type="radio" id="star5" name="star" />
                        <label class="label-star" for="star5"></label>

                    </div>

                </div>

            </div>

            <div class="d-flex justify-content-end mt-5">

                <span class="submit-button"><a href="#"></a></span>

            </div>


        </form>

    </div>

</div>