@model TaxiRateApp.Entities.Dtos.UserForLoginDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link href="~/css/RegisterViewStyle/registermain.css" rel='stylesheet' type='text/css' />

<link href="~/css/LoginViewStyle/loginmain.css" rel='stylesheet' type='text/css'/>

<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="grid align__item">

    <div class="register">

        <svg xmlns="http://www.w3.org/2000/svg" class="site__logo" width="56" height="84" viewBox="77.7 214.9 274.7 412">
            <defs>
                <linearGradient id="a" x1="0%" y1="0%" y2="0%">
                    <stop offset="0%" stop-color="#8ceabb" />
                    <stop offset="100%" stop-color="#378f7b" />
                </linearGradient>
            </defs>
            <path fill="url(#a)" d="M215 214.9c-83.6 123.5-137.3 200.8-137.3 275.9 0 75.2 61.4 136.1 137.3 136.1s137.3-60.9 137.3-136.1c0-75.1-53.7-152.4-137.3-275.9z" />
        </svg>
        <h2>Giriş Yap</h2>

        @*<form method="post" class="form">*@
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="form__field">
                @*<input name="UserName" type="text" placeholder="Ad Soyad">*@
                @Html.TextBoxFor(x=>x.UserEmail , new {@placeholder="Kullanıcı Adı"})
                @Html.ValidationMessageFor(x=>x.UserEmail,"", new{@class="text-danger"})

            </div>

            <div class="form__field">
                @*<input type="password" name="UserPassword" placeholder="Şifre">*@
                @Html.TextBoxFor(x=>x.UserPassword , new {@placeholder="Şifre"})
                @Html.ValidationMessageFor(x=>x.UserPassword,"", new{@class="text-danger"})

            </div>

            <div class="form__field">

                <label class="toggle" for="uniqueID">

                    <input type="checkbox" class="toggle__input" id="uniqueID" />

                    <span class="toggle-track">

                        <span class="toggle-indicator">

                        <span class="checkMark">

                                <svg viewBox="0 0 24 24" id="ghq-svg-check" role="presentation" aria-hidden="true">
                                    <path d="M9.86 18a1 1 0 01-.73-.32l-4.86-5.17a1.001 1.001 0 011.46-1.37l4.12 4.39 8.41-9.2a1 1 0 111.48 1.34l-9.14 10a1 1 0 01-.73.33h-.01z"></path>
                                </svg>

                            </span>

                        </span>

                    </span>
                    Beni Hatırla
                </label>
            </div>

            <div class="form__field">

                <input type="submit" value="Giriş Yap">
            </div>

        }

        <p>Henüz hesabın yokmu? <a href="/Register/Index/">Kayıt ol</a></p>

    </div>

</div>

